<!DOCTYPE html>
<html>
  <head>

    <title>Pin</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      body {
        margin: 0;
        font-size: 28px;
        background-image: url(https://dl.dropboxusercontent.com/s/fl40dtf554u6m2g/cover.jpg?dl=0);

      }

      .header {
        background-color: #f1f1f1;
        padding: 30px;
        text-align: center;
      }

      #navbar {
        overflow: hidden;
        background-color: #333;
      }

      #navbar a {
        float: left;
        display: block;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
      }

      #navbar a:hover {
        background-color: #ddd;
        color: black;
      }

      #navbar a.active {
        background-color: #0489B1;
        color: white;
      }

      .content {
        padding: 16px;
      }

      .sticky {
        position: fixed;
        top: 0;
        width: 100%
      }

      .sticky + .content {
        padding-top: 60px;
      }
    </style>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body background="https://theresortgroupplc.com/wp-content/uploads/2016/12/shutterstock_245476081resized.jpg">
    <div id="navbar">
    <a class="active" href="<%= root_path %>">Home <img src="http://s966.info/library/h/home-icon-png-white/home-icon-png-white-03.png" style="width:25px"/> </a>
    <a href="<%= photos_path %>">Pins <img src="http://files.softicons.com/download/system-icons/windows-8-metro-invert-icons-by-dakirby309/png/256x256/Other/Pin.png" style="width:25px"></img> </a>
    <a href="<%= mypins_path %>">My Pins <img src="http://files.softicons.com/download/system-icons/windows-8-metro-invert-icons-by-dakirby309/png/256x256/Other/Pin.png" style="width:25px"></img> </a>
    <% if current_user.nil? %>
    <a class="navbar-right" href="<%= new_user_session_path %>">   Log In <img src="https://cdn1.iconfinder.com/data/icons/unique-round-blue/93/user-512.png" style="width:25px"></img> </a>

    <a class="navbar-right" href="<%= new_user_registration_path %>">  Sign up <img src="http://www.ymcaswkansas.org/sites/ymcaswkansas.oneeach.org/files/civicrm/friend.png" style="width:25px"/>   </a>
    
    
    <% else %>
    <a class="navbar-right" href="<%= destroy_user_session_path %>" data-method="delete"><img src="http://www.clker.com/cliparts/4/8/K/S/j/6/exit-button-hi.png" style="width:25px" alt="Exit" title="Exit"> <%= current_user.email %>  </a>
    <% end %>
    
        </div>
  <div class="container" style=" width: 70%;
  min-height: 100%;
  margin: 0 auto;
  background: rgb(230, 236, 236);
  box-shadow: 0px 0px 40px black;
  border-radius: 6px;
  box-sizing: border-box;
  overflow: hidden;">
  <!-- /About -->

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>


  </div>
  </body>

  <script>
      window.onscroll = function() {myFunction()};

      var navbar = document.getElementById("navbar");
      var sticky = navbar.offsetTop;

      function myFunction() {
          if (window.pageYOffset >= sticky) {
              navbar.classList.add("sticky")
          } else {
              navbar.classList.remove("sticky");
          }
      }
  </script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/masonry/4.2.1/masonry.pkgd.js">

</script>
</html>
