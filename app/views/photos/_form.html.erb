      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :photo_url %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :photo_description %>
  </div>

  <div class="field">
    <%= form.label :active %>
    <%= form.check_box :active, id: :photo_active %>
  </div>

  <div class="field">
    <%= form.label :user_id, hidden:true %>
    <%= form.text_field :user_id, :value => current_user.id,hidden:true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
